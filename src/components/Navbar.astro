---
import { DarkThemeToggle, IconSwitch } from 'astro-headless-ui';
import { Icon } from 'astro-icon';
---

<header>
    <a href="/"><strong>Documentation</strong></a>
    <menu>
        <DarkThemeToggle id="theme-toggle" class="touch-target">
            <IconSwitch size="1.5em" style="margin:.35rem .2rem .2rem .2rem;">
                <Icon name="carbon:sun"/>
                <Icon name="carbon:moon"/>
            </IconSwitch>
        </DarkThemeToggle>
        <a id="search-link" href="/search" class="touch-target"><span style="display:inline-block;height:1.25em;width:1.25em;"><Icon name="ic:outline-search"/></span>Search</a>
    </menu>
</header>