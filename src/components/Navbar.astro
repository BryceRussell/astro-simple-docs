---
import { DarkThemeToggle, IconSwitch } from 'astro-headless-ui';
import { Icon } from 'astro-icon';
---

<header id="_header">
    <a id="logo" href="/"><strong>Documentation</strong></a>
    <menu>
        <DarkThemeToggle id="_theme-toggle" class="touch-target scale">
            <IconSwitch size="1.25em" style="margin:.35rem .2rem .2rem .2rem;">
                <Icon name="carbon:sun"/>
                <Icon name="carbon:moon"/>
            </IconSwitch>
        </DarkThemeToggle>
        <a id="_search-link" href="/search" class="touch-target scale"><span style="display:inline-block;height:1.25em;width:1.25em;"><Icon name="ic:outline-search"/></span>Search</a>
    </menu>
</header>