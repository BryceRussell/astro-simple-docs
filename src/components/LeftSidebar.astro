---
import Dropdown from "./Dropdown.astro";
import Details from "./Details.astro";
import { LEFT_NAVIGATION } from "@/config";
---

<aside id="__sidebar-left">
    { LEFT_NAVIGATION.map(menu => (
        <Dropdown forceClose="(max-width: 748px)" forceOpen="(min-width: 748px)">
            <Details open title={menu.title} entry={menu.entry} headings={menu.links}/>
        </Dropdown>
    ))}
    <slot />
</aside>