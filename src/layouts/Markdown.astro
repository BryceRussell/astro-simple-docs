---
import { SEO } from 'astro-seo';
import { Icon } from 'astro-icon'
import { CodeCopy, IconSwitcher, TableOfContents } from 'astro-headless-ui';
import Header from '@/components/Header.astro';
import Navbar from '@/components/Navbar.astro';
import Dropdown from '@/components/Dropdown.astro';
import Details from '@/components/Details.astro';
import Footer from '@/components/Footer.astro';
// import TableOfContents from '@/components/TableOfContents.astro';
import ScrollToTop from '@/components/ScrollToTop.astro';
import { SEODEFAULT, LEFT_NAVIGATION } from '@/config';
import '@/css/docs.css'

const  {
	frontmatter,
	headings,
	scroll=true,
    SEO: _SEO = {
		title: frontmatter.title,
		description: frontmatter.description,
        ...SEODEFAULT(Astro)
    }
} = Astro.props
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <SEO {..._SEO}/>
        <slot name="head"/>
	</head>
	<body>
		<Header />
		<Navbar>
			<!-- { headings && <TableOfContents close item='span' title="On This Page" url={Astro.url.pathname} max={3} headings={headings}/>} -->
		</Navbar>
		<aside class="sidebar-left">
			{LEFT_NAVIGATION.map(menu => (
				<Dropdown hide open forceClose="(max-width: 748px)" forceOpen="(min-width: 748px)">
					<Details title={menu.title} entry={menu.entry} headings={menu.links}/>
				</Dropdown>
			))}
			<slot name="sidebar-left"/>
		</aside>
		<main class="prose" data-pagefind-body>
			<slot />
			{scroll && <ScrollToTop />}
		</main>
		<aside class="sidebar-right">
			{headings &&
				<details open>
					<summary class="touch">
						On This Page
						<Icon name="radix-icons:caret-up" size={24}/>
					</summary>
					<TableOfContents max={3} headings={headings.map(h => {return {...h, text: h.text.replace(/^#/g, '')}})}/>
				</details>
			}
			<slot name="sidebar-right"/>
		</aside>
		<Footer />
		<CodeCopy paddingY=".5em" paddingX=".3em" class="copy-code">
			<IconSwitcher name="copy-icons" active="button.copied" size="1.5rem" style="margin-top:-1px">
				<Icon name="fluent:clipboard-20-regular"/>
				<Icon name="fluent:clipboard-task-20-regular"/>
			</IconSwitcher>
		</CodeCopy>
	</body>
</html>