---
import { SEO } from 'astro-seo';
import { Icon } from 'astro-icon'
import { CodeCopy, IconSwitcher } from 'astro-headless-ui';
import Navbar from '@/components/Navbar.astro';
import Footer from '@/components/Footer.astro';
import Breadcrumb from '@/components/Breadcrumb.astro';
import TableOfContents from '@/components/TableOfContents.astro';
import ScrollToTop from '@/components/ScrollToTop.astro';
import { SEODefault } from '@/config';
import '@/css/styles.css'

const  {
	frontmatter,
	headings,
	scroll=true,
    SEO: _SEO = {
		title: frontmatter.title,
		description: frontmatter.description,
        ...SEODefault(Astro)
    }
} = Astro.props
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <SEO {..._SEO}/>
        <slot name="head"/>
	</head>
	<body>
		<Navbar />
		<Breadcrumb />
		<aside class="sidebar-left">
			<slot name="sidebar-left"/>
		</aside>
		<main class="prose" data-pagefind-body>
			<slot />
			{scroll && <ScrollToTop />}
		</main>
		<div class="sidebar-mobile-spacer">
			<aside class="sidebar-mobile">
				{headings && <TableOfContents close item='span' title="On This Page" url={Astro.url.pathname} max={3} headings={headings}/>}
				<slot name="sidebar-mobile"/>
			</aside>
		</div>
		<aside class="sidebar-right">
			{headings && <TableOfContents open item='span' title="On This Page" url={Astro.url.pathname} max={3} headings={headings}/>}
			<slot name="sidebar-right"/>
		</aside>
		<Footer />
		<CodeCopy padding=".5em" class="copy-code">
			<IconSwitcher name="copy-icons" active="button.copied" size="1.5rem" style="margin-top:-1px">
				<Icon name="fluent:clipboard-20-regular"/>
				<Icon name="fluent:clipboard-task-20-regular"/>
			</IconSwitcher>
		</CodeCopy>
	</body>
</html>