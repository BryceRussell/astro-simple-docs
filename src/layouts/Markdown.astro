---
import { SEO } from 'astro-seo';
import { Icon } from 'astro-icon'
import { Breadcrumb, CodeCopy, IconSwitch } from 'astro-headless-ui';
import Navbar from '@/components/Navbar.astro';
import Footer from '@/components/Footer.astro';
import TableOfContents from '@/components/TableOfContents.astro';
import ScrollToTop from '@/components/ScrollToTop.astro';
import { SEODefault } from '@/config';
import type { MarkdownLayout } from '@/types';
import '@/css/markdown.scss'

export interface Props extends MarkdownLayout {};

const  {
	frontmatter,
	headings,
    SEO: _SEO = {
        ...SEODefault(Astro)
    }
} = Astro.props
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <SEO {..._SEO}/>
        <slot name="head"/>
	</head>
	<body>
		<Navbar />
		<main>
			<nav id="breadcrumb">
				<Breadcrumb collapse />
			</nav>
			<div>
				<aside>
					<TableOfContents open item='span' title="On This Page" url={Astro.url.pathname} headings={headings}/>
				</aside>
				<section data-pagefind-body> 
					<slot />
				</section>
			</div>
		</main>
		<Footer />
		<ScrollToTop />
		<CodeCopy>
			<IconSwitch name="copy-icons" selector="button.copied" size="1.5rem">
				<Icon name="fluent:clipboard-20-regular"/>
				<Icon name="fluent:clipboard-task-20-regular"/>
			</IconSwitch>
		</CodeCopy>
	</body>
</html>